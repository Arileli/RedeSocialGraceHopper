package Pacotejava;

import java.util.Scanner;

public class Exercício8 {
	public static void main(String[] arg) {
		
		
		Scanner ler = new Scanner (System.in);
		
		double fabrica, imposto, distribuidor=0, valorTotal;
		System.out.println("Digite o valor da fabrica: ");
		fabrica = ler.nextInt();
		
		imposto = (fabrica*0.45);
		distribuidor = (fabrica*0.28);
		valorTotal = fabrica+imposto+distribuidor;
		 
		 System.out.println("\nO melhor valor que temos para o senhor(a) é R$: " + valorTotal);
		 
		 
	}

}
