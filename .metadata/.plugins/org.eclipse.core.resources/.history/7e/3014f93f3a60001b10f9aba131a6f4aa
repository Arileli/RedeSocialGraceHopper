package Pacotejava;

import java.util.Scanner;

public class Exercício8 {
	public static void main(String[] arg) {
		
		Scanner ler = new Scanner (System.in);
		
		double fabrica = 0, consumo = 0, arredondamento, valorTotal;
		System.out.println("Digite o valor da fabrica");
		fabrica = ler.nextInt(System.in);
		
		 arredondamento = fabrica * 0.28 + fabrica * 0.48;
		 
		 arredondamento = Math.sqrt(consumo + 2);
		 
		 valorTotal = fabrica+consumo+arredondamento;
		 
		 System.out.println("\nO melhor valor que temos para o senhor(a) é: " + "R$" + valorTotal);
		 
		 
	}

}
